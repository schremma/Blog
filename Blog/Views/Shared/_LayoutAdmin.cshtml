@using Blog.Helpers

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/style")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body id="top">
    <!--header -->
    <div id="header-wrap">
        <header>
            <hgroup>
                <h1>@Html.ActionLink("Andrea's blog", "Index", "Home")</h1>
            </hgroup>

            <nav>
                <ul>
                    <li id="@Html.IsCurrent(controller: "Home", action: "Index")">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li id="@Html.IsCurrent(controller: "Home", action: "Contact")">@Html.ActionLink("Contact", "Contact", "Home")</li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li id="@Html.IsCurrent(controller: "Post", action: "Index")">@Html.ActionLink("Posts", "Index", "Post")</li>
                        <li id="@Html.IsCurrent(controller: "Comment", action: "Index")">@Html.ActionLink("Comments", "Index", "Comment")</li>
                        <li id="@Html.IsCurrent(controller: "Resource", action: "Index")">@Html.ActionLink("Resources", "Index", "Resource")</li>
                    }
                </ul>
            </nav>

            <div class="subscribe">
                @Html.Partial("_LoginPartial")
            </div>

            <!--/header-->
        </header>
    </div>

    <div id="content-wrap">
        <!-- content -->
        <div id="content" class="clearfix">


            @RenderBody()



            <!-- content -->
        </div>

        <!-- /content-out -->
    </div>
    <footer>
        <p class="footer-left">
            &copy; @DateTime.Now.Year - Andrea's Blog
        </p>
        <p class="footer-right">
            Design by <a href="http://www.styleshout.com/">styleshout</a>
        </p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
