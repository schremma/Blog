@using Blog.Helpers

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/style", "~/Content/mobile")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body id="top">
    <div data-role="page" data-theme="a">
        <!--header -->
        <div data-role="header">
            <h1>@Html.ActionLink("Andrea's blog", "Index", "Home")</h1>
            <div class="ui-btn-right">
                @Html.Partial("_LoginPartial")
            </div>


            <!--/header-->
        </div>

        <div id="content-wrap">
            <!-- content -->
            <div id="content" class="clearfix" data-role="content">
                <div data-role="collapsible-set">
                    <div class="about-me" data-role="collapsible">

                        <h3>About Me</h3>
                        <div>
                            <img src="@Url.Content("~/content/images/gravatar.jpg")" width="42" height="42" alt="avatar" class="align-left" />
                        </div>
                        <p class="about_mobile">

                            Lorem ipsum dolor sit, consectetuer adipiscing. Donec libero. Suspendisse bibendum.
                            Cras id urna. Morbi tincidunt, orci ac convallis aliquam, lectus turpis varius lorem, eu
                            posuere nunc justo tempus leo suspendisse bibendum.
                        </p>
                        @Html.ActionLink("Contact", "Contact", new { value = 1 }, new { data_role = "button" })
                    </div>

                </div>
                <div class="sidemenu popular" data-role="collapsible">
                    @Html.Action("TopList", "Home")
                </div>
            </div>

            <!-- main -->
            <div id="main">
                @RenderBody()

                <!-- /main -->
            </div>




            <!-- content -->
        </div>

        <!-- /content-out -->
    </div>
    <footer data-role="footer">
        <p class="footer-left">
            &copy; @DateTime.Now.Year - Andrea's Blog
        </p>
        <p>
            Design by <a href="http://www.styleshout.com/">styleshout</a>
        </p>
    </footer>

    @Scripts.Render("~/bundles/jquery", "~/Scripts/jquery/mobile")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
